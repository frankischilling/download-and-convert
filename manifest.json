{
  "manifest_version": 3,
  "name": "Image Downloader & Converter",
  "version": "1.0",
  "description": "Right-click an image to download and convert it to a chosen format.",
  "permissions": [
    "contextMenus",
    "downloads",
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}


