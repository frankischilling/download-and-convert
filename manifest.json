{
  "manifest_version": 3,
  "name": "Image Downloader & Converter",
  "version": "1.1.0",
  "description": "Right-click an image to download and convert it to PNG, JPEG, WEBP or BMP, with a popup/options page to choose the format.",
  "permissions": [
    "contextMenus",
    "downloads",
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Image Downloader & Converter",
    "default_popup": "src/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "src/options.html"
}